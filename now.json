{
  "version": 2,
  "builds": [
    {
      "src": "api/src/index.js",
      "use": "@now/node"
    },
    {
      "src": "client/package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1",
      "continue": true
    },
    {
      "src": "/client/src/serviceWorker.js",
      "dest": "client/serviceWorker.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/index.html"
    }
  ]
}
