{
  "version": 2,
  "name": "covaid",
  "alias": "covaid.now.sh",
  "builds": [
    {
      "src": "api/src/index.js",
      "use": "@now/node"
    },
    {
      "src": "client/package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "headers": {
        "cache-control": "s-maxage=0"
      },
      "dest": "api/src/index.js"
    },
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000,immutable"
      },
      "dest": "client/static/$1"
    },
    {
      "src": "/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000,immutable"
      },
      "dest": "client/index.html"
    }
  ]
}
